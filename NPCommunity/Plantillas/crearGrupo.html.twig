<html>
	<head>
		<meta charset="UTF-8">
		<script type="text/javascript" src="{{ asset('js/crearGrupo.js') }}"></script>
		<script type="text/javascript" src="{{ asset('js/busqueda.js') }}"></script>
		{# Css #}
		<link
		rel="stylesheet" href="{{ asset('css/estilo.css') }}">
		{# Alertas #}
		<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
		{# bootstrap #}
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
		<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
		<title>Crear grupo</title>
	</head>
	<body>
		{% include 'barraSuperior.html.twig' %}
		<div class="container-fluid px-5">
			<div class="row d-flex justify-content-center align-items-center" style="height:130px">
				<div class="col-8 d-flex justify-content-center align-items-center mt-3">
					<div id="mensajeNombreGrupo" class="alert alert-danger d-none">Nombre de grupo ya existente</div>
					<h1 id="crearGrupoH1">Crear un nuevo grupo</h1>
				</div>
			</div>
			<div class="row d-flex justify-content-center align-items-center">
				<div class="col-10 col-md-7 col-lg-4">
					<div class="mb-3">
						<span class="form-label">Nombre del grupo</span>
						<input class="form-control" id="nom_grupo" onblur="comprobarNombreGrupoNoExistente()" autocomplete="off" placeholder="Nombre">
					</div>
					<div class="mb-3">
						<span class="form-label">Foto de perfil del grupo</span>
						<input class="form-control" type="file" id="foto" onchange="validarFoto()">
					</div>
				</div>
				<div class="col-10 col-md-7 col-lg-4">
					<div class="mb-3">
						<span class="form-label">Información adicional sobre grupo</span>
						<textarea id="descripcion" class="form-control" placeholder="Descripción" rows="4"></textarea>
					</div>
				</div>
			</div>

			<div class="row d-flex justify-content-center align-items-center">
				<div class="col-12 col-lg-2 mb-2 d-flex justify-content-center justify-content-lg-start align-items-center align-items-lg-start">
					<img id="imagen" style="width: 150px; display: none;">
				</div>
				<div class="col-12 col-lg-3 d-flex justify-content-center justify-content-lg-start align-items-center align-items-lg-start">
					<button type="button" class="btn btn-primary" onclick="validarGrupo()">Publicar</button>
				</div>
			</div>
		</div>
	</body>
</html>
