<html>
	<head>
		<meta charset="UTF-8">
		<script type="text/javascript" src="{{ asset('js/crearProducto.js') }}"></script>
		<script type="text/javascript" src="{{ asset('js/busqueda.js') }}"></script>
		{# Css #}
		<link
		rel="stylesheet" href="{{ asset('css/estilo.css') }}">
		{# Alertas #}
		<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
		{# bootstrap #}
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
		<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
		<title>Crear producto</title>
	</head>
	<body>
		{% include 'barraSuperior.html.twig' %}
		<div class="container-fluid px-5">
			<div class="row d-flex justify-content-center align-items-center">
				<div class="col-8 d-flex justify-content-center align-items-center my-3">
					<h1 id="crearProductoH1">Crear un nuevo producto</h1>
				</div>
			</div>

			<div class="row d-flex justify-content-center align-items-center">
				<div class="col-11 col-md-8 col-lg-4">
					<div class="mb-3">
						<span class="form-label">Nombre del producto</span>
						<input class="form-control" id="nom_prod" placeholder="Nombre" autocomplete="off">
					</div>
					<div class="mb-3">
						<span class="form-label">Precio</span>
						<input class="form-control" id="precio" placeholder="€" type="number" maxlength="5" onblur="validarPrecio()">
					</div>
					<div class="mb-3">
						<span class="form-label">Foto del producto</span>
						<input class="form-control" type="file" id="foto" onchange="validarFoto()">
					</div>
				</div>

				<div class="col-11 col-md-8 col-lg-4">
					<div class="mb-3">
						<span class="form-label">Información adicional sobre el producto</span>
						<textarea id="descripcion" class="form-control" placeholder="Descripción" rows="6"></textarea>
					</div>
				</div>
			</div>

			<div class="row d-flex justify-content-center align-items-center">
				<div class="col-12 col-lg-2 mb-2 d-flex justify-content-center justify-content-lg-start align-items-center align-items-lg-start">
					<img id="imagen" style="width: 150px; display: none;">
				</div>
				<div class="col-12 col-lg-3 d-flex justify-content-center justify-content-lg-start align-items-center align-items-lg-start">
					<button type="button" class="btn btn-primary" onclick="validarProducto()">Publicar</button>
				</div>
			</div>
		</div>
	</body>
</html>
