<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>Editar Perfil</title>
		<script type="text/javascript" src="{{ asset('js/editarPerfil.js') }}"></script>
		<script type="text/javascript" src="{{ asset('js/busqueda.js') }}"></script>
		{# Css #}
		<link
		rel="stylesheet" href="{{ asset('css/estilo.css') }}">
		{# Alertas #}
		<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
		{# bootstrap #}
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
		<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
		<style>
			#fotoPerfilEditar {
				transition: opacity 0.3s ease; /* Transición suave */
			}

			#fotoPerfilEditar:hover {
				filter: brightness(50%);
			}
		</style>
	</head>
	<body>

		{% include 'barraSuperior.html.twig' %}
		<div class="container-fluid  px-5">
			<div id="contenido" class="row d-flex justify-content-center align-items-center ">

				<ul class="nav nav-underline d-flex justify-content-center align-items-center">
					<li class="nav-item">
						<a class="nav-link" href="{{ asset('perfil') }}">Mi Perfil</a>
					</li>
					<li class="nav-item ">
						<a class="nav-link active" href="{{ asset('editarPerfil') }}">Editar Perfil</a>
					</li>
				</ul>


				<div class="col-12 col-lg-7 mt-3">
					<div class="card">
						<div class="row mb-2 pt-4">
							<div class="col-5 col-sm-4 offset-1 d-flex  align-items-center">Foto de perfil</div>
							<div class="col-5 col-sm-4 d-flex justify-content-center align-items-center">
								<img id="fotoPerfilEditar" style="border-radius:100px;" width="80px" height="80px" src="fotos/{{ app.user.getFotoPerfil() }}" alt="">
								<input type="file" name="fotoPerfil" id="inputArchivo" style="display: none;">
							</div>
							<div class="col-2 offset-2 offset-sm-0 d-flex  align-items-center">
								<button class="botonCambiar btn btn-primary btn-sm" id="botonFoto" hidden>Cambiar</button>
							</div>
						</div>

						<div class="row mb-2">
							<div class="col-5 col-sm-4 offset-1">Nombre usuario</div>
							<div class="col-5 col-sm-4"><input id="nuevoNomUsuario" placeholder="{{app.user.getNomUsuario}}" class="form-control form-control-sm campoTexto" type="text" aria-label=".form-control-sm example"></div>
							<div class="col-2 offset-2 offset-sm-0">
								<button class="botonCambiar btn btn-primary btn-sm" id="botonNomUsuario" hidden>Cambiar</button>
							</div>
						</div>

						<div class="row mb-2">
							<div class="col-5 col-sm-4 offset-1">Nombre</div>
							<div class="col-5 col-sm-4"><input id="nuevoNombre" placeholder="{{app.user.getNombre}}" class="form-control form-control-sm campoTexto" type="text" aria-label=".form-control-sm example"></div>
							<div class="col-2 offset-2 offset-sm-0">
								<button class="botonCambiar btn btn-primary btn-sm" class="botonCambiar" id="botonNombre" hidden>Cambiar</button>
							</div>
						</div>

						<div class="row mb-2">
							<div class="col-5 col-sm-4 offset-1">Apellidos</div>
							<div class="col-5 col-sm-4"><input id="nuevoApellido" placeholder="{{app.user.getApellidos}}" class="form-control form-control-sm campoTexto" type="text" aria-label=".form-control-sm example"></div>
							<div class="col-2 offset-2 offset-sm-0">
								<button class="botonCambiar btn btn-primary btn-sm" id="botonApellidos" hidden>Cambiar</button>
							</div>
						</div>

						<div class="row mb-3">
							<div class="col-5 col-sm-4 offset-1 d-flex  align-items-center">Biografía</div>
							<div class="col-5 col-sm-4">
								<textarea id="nuevoBio" placeholder="{{ app.user.getBio() }}" class="form-control form-control-sm" rows="3"></textarea>
							</div>
							<div class="col-2 offset-2 offset-sm-0 d-flex  align-items-center">
								<button class="botonCambiar btn btn-primary btn-sm" id="botonBio" hidden>Cambiar</button>
							</div>
						</div>

						<div class="row mb-2 pb-4">
							<div class="col-5 col-sm-4 offset-1">Correo</div>
							<div class="col-5 col-sm-4">
								<input id="nuevoCorreo" placeholder="{{app.user.getCorreo}}" class="form-control form-control-sm campoTexto" type="text" aria-label=".form-control-sm example"></div>
							<div class="col-2 offset-2 offset-sm-0">
								<button class="botonCambiar btn btn-primary btn-sm" id="botonCorreo" hidden>Cambiar</button>
							</div>
						</div>


					</div>


				</div>
			</div>
		</div>
	</body>
</html>
