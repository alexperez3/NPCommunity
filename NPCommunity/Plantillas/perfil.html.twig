<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>Perfil</title>
		<script type="text/javascript" src="{{ asset('js/busqueda.js') }}"></script>
		<script type="text/javascript" src="{{ asset('js/perfil.js') }}"></script>
		{# Css #}
		<link
		rel="stylesheet" href="{{ asset('css/estilo.css') }}">
		{# Alertas #}
		<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
		{# bootstrap #}
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
		<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
		{# JQuery #}
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
		{# que el nav se quede arriba despues del scroll #}
		<script>
			$(document).ready(function () {
var nav = $('.nav');
var navOffset = nav.offset().top + 40;

$(window).scroll(function () {
var scrollPos = $(window).scrollTop();

if (scrollPos > navOffset) {
nav.addClass('nav-fixed');
} else {
nav.removeClass('nav-fixed');
}
});
});
		</script>
	</head>
	<body>
		{% include 'barraSuperior.html.twig' %}
		<ul class="nav nav-underline d-flex justify-content-center align-items-center">
			<li class="nav-item">
				<button id="mostrarMisPosts" class="nav-link active" aria-current="page">Posts</button>
			</li>
			<li class="nav-item">
				<button id="mostrarMisGrupos" class="nav-link">Grupos</button>
			</li>
			<li class="nav-item">
				<button id="mostrarMisProductos" class="nav-link">Productos</button>
			</li>
			<li class="nav-item">
				<a class="nav-link" href="{{ asset('editarPerfil') }}">Editar Perfil</a>
			</li>
		</ul>
		<div class="container-fluid  px-5">
			<div id="contenido" class="row">


				<div class="col-12">
					<div class="row mt-2">
						<div class="col-5 col-sm-4 col-md-3 col-lg-2">
							<img id="fotoPerfil" style="border-radius:100px;" width="150px" height="150px" src="fotos/{{ app.user.getFotoPerfil() }}" alt=""></div>
						<div class="col-4">
							<div class="row">
								<div class="col">
									<span class="nombreUsuarioPerfil">@{{app.user.getNomUsuario}}</span>
								</div>
							</div>
							<div class="row">
								<div class="col">
									<small>{{app.user.getNombre}}
										{{app.user.getApellidos}}</small>
								</div>
							</div>
							<div class="row">
								<div class="col">
									<small>{{app.user.getCorreo}}</small>
								</div>
							</div>
						</div>
						<div class="col-12 col-lg-5 mt-2">
							<strong>Biografía:
							</strong>
							{% if app.user.getBio %}
								{{app.user.getBio}}
							{% else %}
								<small class="text-body-secondary">No tienes biografía</small>
							{% endif %}
						</div>
					</div>
					<div
						class="row mt-3" id="contenidoPerfil">{# aqui se muestran los post/grupos/Productos del usu logueado #}
					</div>
				</div>
			</div>
		</div>
	</body>
</html>
