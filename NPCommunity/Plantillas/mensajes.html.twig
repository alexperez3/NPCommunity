<html>
	<head>
		<meta charset="UTF-8">
		<script type="text/javascript" src="{{ asset('js/mensajes.js') }}"></script>
		<script type="text/javascript" src="{{ asset('js/busqueda.js') }}"></script>
		{# Css #}
		<link
		rel="stylesheet" href="{{ asset('css/estilo.css') }}">
		{# Alertas #}
		<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
		{# bootstrap #}
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
		<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
		<title>Mensajes</title>
	</head>
	<body>
		{% include 'barraSuperior.html.twig' %}
		<div class="container-fluid  px-5">
			<div id="contenido" class="row mt-3">
				<div class="row">
					<div class="col-12 col-lg-4">
						<img style="border-radius:100px;" onclick="volverPrincipal()" width="40px" height="40px" src="{{asset('fotos/flecha.png')}}" alt="">
						<small class="text-body-secondary">Volver a la p√°gina principal</small>
					</div>
					<div class="col-6 col-lg-5 offset-3 offset-lg-0">
						<h1>Conversaciones</h1>
					</div>
				</div>

				<div class="row">
					{% for chat in chats %}
						{% if app.user.nomUsuario != chat.nomUsuario %}
							<div class="col-6 col-md-4 col-lg-3 col-xl-2 mb-5">
								<div class="card" style="width: 8rem;">
									<img src="fotos/{{ chat.getFotoPerfil() }}" style="width:7.9rem; height:7.9rem" class="card-img-top" alt="...">
									<div class="card-body">
										<h5 class="card-title">
											{% if chat.nombre %}
												{{chat.nombre}}
											{% else %}
												{{chat.nomUsuario}}
											{% endif %}
										</h5>
										<a href="{{ path('chat', {chatCon:chat.nomUsuario}) }}" class="btn btn-primary">Escribir</a>
									</div>
								</div>
							</div>
						{% endif %}
					{% endfor %}
				</div>
			</div>
		</div>
	</body>
</html>
